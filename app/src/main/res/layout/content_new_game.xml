<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.solaldussout_revel.mastermind.NewGameActivity"
    tools:showIn="@layout/activity_new_game">

    <com.solaldussout_revel.mastermind.widget.RobotoTextView
        android:text="Mastermind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:letterSpacing=".2"
        app:font="Roboto-Thin.ttf"
        android:textColor="#EEEEEE" />

    <Button
        android:text="Jouer"
        android:id="@+id/newGameButton"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:textColor="#333333"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:lineSpacingExtra="14sp"
        android:lineSpacingMultiplier="999"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:letterSpacing=".3"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" />

    <Button
        android:text="RÃ¨gles du Jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RulesButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        android:textColor="#777777"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
