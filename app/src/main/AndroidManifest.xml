<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solaldussout_revel.mastermind">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.solaldussout_revel.mastermind.MainActivity"
            android:label="@string/title_activity_new_game"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.solaldussout_revel.mastermind.GameActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.solaldussout_revel.mastermind.RulesActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.solaldussout_revel.mastermind.MenuParentActivity"
            android:label="@string/title_activity_menu_parent"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>